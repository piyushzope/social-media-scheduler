{
  "name": "social-media-scheduler",
  "version": "0.1.0",
  "private": true,
  "packageManager": "pnpm@9.15.0",
  "scripts": {
    "dev": "turbo run dev",
    "build": "turbo run build",
    "test": "turbo run test",
    "lint": "turbo run lint",
    "clean": "turbo run clean && rm -rf node_modules",
    "db:generate": "pnpm --filter @social/database generate",
    "db:migrate": "pnpm --filter @social/database migrate:dev",
    "db:push": "pnpm --filter @social/database db:push",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\""
  },
  "devDependencies": {
    "@social/config-eslint": "workspace:*",
    "@social/config-typescript": "workspace:*",
    "prettier": "^3.2.0",
    "turbo": "^2.3.0"
  },
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=9.0.0"
  }
}
